@{
    ViewData["Title"] = "Home Page";
}


<h1>Registration</h1>
@model RegisterUser
<form action="register" method="POST">
    <div class="form-group">
        <span asp-validation-for="Name"></span>
        <label asp-for="Name">Your Name:</label>
        <input type="text" asp-for="Name" class="text-box">
    </div>
    <div class="form-group">
        <span asp-validation-for="Alias"></span>
        <label asp-for="Alias">Your Alias:</label>
        <input type="text" asp-for="Alias" class="text-box">
    </div>
    <div class="form-group">
        <span asp-validation-for="Email"></span>
        <label asp-for="Email">Your Email:</label>
        <input type="text" asp-for="Email" class="text-box"></input>
    </div>
    <div class="form-group">
        <span asp-validation-for="Password"></span>
        <label asp-for="Password">Your Password:</label>
        <input type="text" asp-for="Password" class="text-box"></input>
    </div>
    <div class="form-group">
        <span asp-validation-for="PasswordConfirmation"></span>
        <label asp-for="PasswordConfirmation">Confirm Password:</label>
        <input type="text" asp-for="PasswordConfirmation" class="text-box"></input>
    </div>
    <div class="button">
        <input type="submit" name="" value="Register">
    </div>
</form>

<p>Already Registered?</p>
<a href="login">Login Here</a>